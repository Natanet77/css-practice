<header class="header">
    <a href="#test">
        {{> logo}}
    </a>

    <nav class="header_nav">
        <div class="header_nav_right">
            {{>nav list=header}}
        </div>
    </nav>
</header>

<main class="main">
    {{#with info}}
    <div class="info">
        <h1 class="info_title">{{title}}</h1>
        <p class="info_description">{{description}}</p>
    </div>
    {{/with}}

    {{#with form}}
    <form class="form">

        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
                id="form-input{{id}}">
            {{/each}}
        </div>

        <div class="form_checkbox">

            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>

        <button type="submit" class="form_button">{{button}}</button>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</main>

{{#with updates}}

<div class="updates">

    <div class="updates_title">{{title}}</div>

    {{#each list}}
    <div class="list">
        <span class="list_image"></span>
        <div class="list_block">
            <div class="list_nickname">{{nickname}}</div>
            <p class="list_description">{{description}}</p>
        </div>

    </div>
    {{/each}}

    {{#with show_all}}
    <a href="{{url}}" class="show_all_text">{{text}}</a>
    {{/with}}
</div>
{{/with}}

{{#with expirience}}
<div class="experience">
    <div class="experience_title">{{title}}</div>
    <div class="experience_badge">
        <span class="badge_text">{{badge}}</span>
    </div>

    {{#each list}}
    <div class="experience_cards">
        <div class="cards_name">{{name}}</div>
        <p class="cards_details">{{details}}</p>
    </div>
    {{/each}}
</div>
{{/with}}


<footer class="footer" id="test">
    <div>
        {{> logo}}
        <span class="footer_copyright"> Copyright 2023-2024</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>